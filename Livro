-- create a table
CREATE TABLE livro (
  nome VARCHAR(255) NOT NULL,
  autor VARCHAR(255) NOT NULL,
  genero VARCHAR (255) NOT NULL,
  numero de paginas (255) NOT NULL,
  ano int (4) NOT NULL,
  idioma VARCHAR (50) NOT NULL
);
-- insert some values
